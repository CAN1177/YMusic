.query-form{
  display: block;
  border:2px solid rgba(85, 94, 79, 0.466);
  padding: 5px 5px; 
  border-radius: 5px;
}
.query-form button{
  float: right;
  padding: 0;
  margin: 0 0 0 5px;
  width: 25px;
  height: 25px;
  background: transparent;
}
.query-form button::after{
  border: none;
}
.query-form button image{
  display: block;
  width: 100%;
  height: 100%;
  margin-right: 5px;
}
.query-form input{
  color:rgb(42, 78, 88);
  font-size: 12px;
  margin-left: 5px;
}